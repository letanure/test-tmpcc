{
  "compilerOptions": {
    "outDir": "lib",
    "target": "ES2019",
    "module": "commonjs",
    "moduleResolution": "node",
    "declaration": true,
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "allowJs": true,
    "checkJs": false,
    "noErrorTruncation": false
  },
  "include": ["**/*.ts"],
  "exclude": ["node_modules"]
}
